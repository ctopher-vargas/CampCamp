<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcom To CampCamp</h1>
            <p>Hand picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" class="form-control" name="search" placeholder="Campground Search..">
                        <input type="submit" class="btn btn-default" value="Search">
                    </div>
                </form>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
        <% campgrounds.forEach(function(camp){ %>

        <div class="col-md-3 col-sm-6">
            <div class=thumbnail>
                <img src="<%=camp.image%>"></img>
                <div class="caption"><%=camp.name%></div>
                <p>
                    <a href="/campgrounds/<%=camp._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    
        <% });  %>
    </div>
</div>
<% include ../partials/footer %>